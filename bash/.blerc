# ======= CORE FEATURES =======
bleopt highlight_syntax=1
bleopt highlight_variable=1
bleopt highlight_filename=1
bleopt complete_auto_complete=1
bleopt complete_auto_delay=200

# ======= EXACT CATPPUCCIN MOCHA COLORS (24-bit RGB) =======

# Command highlighting - using exact hex values
ble-face -s command_builtin            'fg=#a6e3a1,bold'      # Green - built-in commands
ble-face -s command_function           'fg=#89b4fa,bold'      # Blue - functions  
ble-face -s command_alias              'fg=#a6e3a1,bold'      # Green - aliases (same as built-ins)
ble-face -s command_keyword            'fg=#cba6f7,bold'      # Mauve - keywords
ble-face -s command_file               'fg=#cdd6f4'           # Text - executable files

# File and directory highlighting
ble-face -s filename                   'fg=#cdd6f4'           # Text - regular files
ble-face -s filename_directory         'fg=#89b4fa,bold'      # Blue - directories
ble-face -s filename_executable        'fg=#a6e3a1,bold'      # Green - executables
ble-face -s filename_link              'fg=#f5c2e7'           # Pink - symlinks
ble-face -s filename_orphan            'fg=#f38ba8'           # Red - broken symlinks
ble-face -s filename_missing           'fg=#f38ba8,underline' # Red - missing files

# Syntax elements
ble-face -s syntax_quoted              'fg=#f9e2af'           # Yellow - quoted strings
ble-face -s syntax_single_quote        'fg=#f9e2af'           # Yellow - single quotes
ble-face -s syntax_double_quote        'fg=#f9e2af'           # Yellow - double quotes  
ble-face -s syntax_comment             'fg=#7f849c'           # Overlay1 - comments
ble-face -s syntax_error               'bg=#f38ba8,fg=#cdd6f4' # Red bg, Text fg - errors
ble-face -s syntax_history_expansion   'fg=#fab387'           # Peach - history expansion
ble-face -s syntax_glob                'fg=#cba6f7'           # Mauve - glob patterns

# Variables and parameters  
ble-face -s variable_simple            'fg=#cba6f7'           # Mauve - variables
ble-face -s variable_array             'fg=#cba6f7,bold'      # Mauve - arrays
ble-face -s variable_special           'fg=#f5c2e7,bold'      # Pink - special vars

# Completion highlighting
ble-face -s menu_filter_fixed          'fg=#a6e3a1,bold'      # Green - fixed completions
ble-face -s menu_filter_input          'fg=#f9e2af,underline' # Yellow - input filter
ble-face -s auto_complete              'fg=#7f849c'           # Overlay1 - auto-completion

# Additional elements with exact Catppuccin colors
ble-face -s argument_option            'fg=#fab387'           # Peach - command options
ble-face -s region                     'bg=#45475a,fg=#cdd6f4' # Surface1 bg, Text fg
ble-face -s region_target              'bg=#45475a,fg=#f5c2e7' # Surface1 bg, Pink fg
ble-face -s region_match               'bg=#585b70,fg=#cdd6f4' # Surface2 bg, Text fg
ble-face -s disabled                   'fg=#6c7086'           # Overlay0 - disabled text
ble-face -s overwrite_mode             'bg=#f38ba8,fg=#1e1e2e' # Red bg, Base fg

# Prompt and cursor colors
ble-face -s prompt_status_line         'fg=#bac2de'           # Subtext1
ble-face -s cursor_default             'bg=#f5e0dc'           # Rosewater
ble-face -s cursor_overwrite           'bg=#f38ba8'           # Red

# Selection and search highlighting
ble-face -s region_insert              'bg=#313244,fg=#cdd6f4' # Surface0 bg, Text fg
ble-face -s region_search_match        'bg=#f9e2af,fg=#1e1e2e' # Yellow bg, Base fg
ble-face -s region_search_current      'bg=#a6e3a1,fg=#1e1e2e' # Green bg, Base fg

# ======= PERFORMANCE & BEHAVIOR =======
bleopt complete_menu_complete=1
bleopt complete_menu_filter=1
bleopt complete_menu_maxlines=15
bleopt edit_multiline=1
bleopt edit_word_mode=1
bleopt indent_offset=2
bleopt history_share=1

# ======= ENABLE 24-BIT COLOR SUPPORT =======
# Ensure your terminal supports true colors
if [[ $COLORTERM == truecolor || $COLORTERM == 24bit ]]; then
    bleopt canvas_winch_action=redraw
    bleopt highlight_timeout=50
fi

# ======= CATPPUCCIN STARTUP MESSAGE =======
if [[ $BLE_VERSION ]]; then
    echo -e "\033[38;2;245;194;231mðŸŒ™ Catppuccin Mocha theme loaded with blesh $BLE_VERSION\033[0m"
fi
